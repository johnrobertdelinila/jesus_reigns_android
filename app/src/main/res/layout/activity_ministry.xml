<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MinistryActivity">

    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nestedScroll"
        android:paddingTop="@dimen/padding_normal_16dp"
        android:orientation="vertical">

        <LinearLayout
            android:paddingLeft="@dimen/padding_dialog_24dp"
            android:paddingRight="@dimen/padding_dialog_24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textSize="18sp"
                android:text="Almost there, select the Ministry you belong."
                android:layout_marginBottom="12dp"
                android:textColor="@color/minimal_black"
                android:fontFamily="@font/nunito_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    app:contentPaddingLeft="@dimen/padding_dialog_24dp"
                    app:contentPaddingRight="@dimen/padding_dialog_24dp"
                    app:contentPaddingBottom="32dp"
                    app:contentPaddingTop="32dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    android:stateListAnimator="@animator/selector_raised"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:onClick="elevate"
                    android:id="@+id/technical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_technical"
                            android:layout_margin="4dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:text="Technical"
                            android:textColor="@color/minimal_black"
                            android:textSize="12.5sp"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    app:contentPaddingLeft="@dimen/padding_dialog_24dp"
                    app:contentPaddingRight="@dimen/padding_dialog_24dp"
                    app:contentPaddingBottom="32dp"
                    app:contentPaddingTop="32dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    android:stateListAnimator="@animator/selector_raised"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:onClick="elevate"
                    android:id="@+id/multimedia"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_multimedia"
                            android:layout_margin="4dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:text="Multimedia"
                            android:textColor="@color/minimal_black"
                            android:textSize="12sp"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    app:contentPaddingLeft="@dimen/padding_dialog_24dp"
                    app:contentPaddingRight="@dimen/padding_dialog_24dp"
                    app:contentPaddingBottom="32dp"
                    app:contentPaddingTop="32dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    android:stateListAnimator="@animator/selector_raised"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:onClick="elevate"
                    android:id="@+id/band"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_band"
                            android:layout_margin="4dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:text="Band"
                            android:textColor="@color/minimal_black"
                            android:textSize="19sp"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    app:contentPaddingLeft="@dimen/padding_dialog_24dp"
                    app:contentPaddingRight="@dimen/padding_dialog_24dp"
                    app:contentPaddingBottom="32dp"
                    app:contentPaddingTop="32dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    android:stateListAnimator="@animator/selector_raised"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:onClick="elevate"
                    android:id="@+id/vocals"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_sing"
                            android:layout_margin="4dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:text="Vocals"
                            android:textColor="@color/minimal_black"
                            android:textSize="19sp"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    app:contentPaddingLeft="@dimen/padding_dialog_24dp"
                    app:contentPaddingRight="@dimen/padding_dialog_24dp"
                    app:contentPaddingBottom="32dp"
                    app:contentPaddingTop="32dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    android:stateListAnimator="@animator/selector_raised"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:onClick="elevate"
                    android:id="@+id/dance"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_dance"
                            android:layout_margin="4dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:text="Dance"
                            android:textColor="@color/minimal_black"
                            android:textSize="19sp"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.appbar.AppBarLayout
        app:liftOnScroll="true"
        android:id="@+id/app_bar"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingLeft="@dimen/padding_normal_16dp"
            android:paddingRight="@dimen/padding_normal_16dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_action_bar_height">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_arrow_back_24px"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:id="@+id/back"
                android:tint="@color/minimal_black"
                android:onClick="back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/notification" />

            <TextView
                android:text="Select Ministry"
                android:id="@+id/text_title"
                android:layout_marginStart="56dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/minimal_black"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Continue"
        android:text="Continue"
        android:id="@+id/fab"
        app:backgroundTint="@color/jrm_yellow"
        app:icon="@drawable/ic_navigate_next_24px"
        app:iconGravity="end"
        app:layout_anchor="@id/nestedScroll"
        app:layout_anchorGravity="bottom|right|end"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>